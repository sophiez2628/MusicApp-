<h1><%= @band.name %><br>
<h3>Band Albums</h3>
<ul>
  <% @band.albums.each do |album| %>
    <li><a href="<%= album_url(album.id) %>"><%= album.name %></a></li>
  <% end %>
</ul>

<p>
  <a href="<%= edit_band_url(@band) %>">Edit Band</a><br>
  <%= link_to 'Add New Band', new_band_url %><br>
  <a href="<%= bands_url %>">Index Page</a><br>
</p>

<form action="<%= band_url(@band) %>" method="GET">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Band">
</form>
